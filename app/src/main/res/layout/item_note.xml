<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/nota_titulo"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="Titulo de Nota"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/nota_fecha"
            android:layout_toEndOf="@+id/nota_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="2019/10/05"
            />

        <TextView
            android:id="@+id/nota_informacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@+id/nota_titulo"
            android:text="Aqui va toda la nota que escribe nuestro usuario a la hora de crear una nueva nota."/>


        <Button
            android:id="@+id/archivar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nota_informacion"
            android:text="Favorito"
            android:layout_alignParentEnd="true"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Archivar"
            android:layout_toStartOf="@+id/archivar_button"
            android:layout_below="@+id/nota_informacion"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"

            />

    </RelativeLayout>



</LinearLayout>